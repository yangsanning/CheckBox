<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ysn="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CheckView"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center">

        <ysn.com.view.checkview.CheckView
            android:id="@+id/main_activity_check_view1"
            android:layout_width="32dp"
            android:layout_height="32dp" />

        <ysn.com.view.checkview.CheckView
            android:id="@+id/main_activity_check_view2"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="20dp"
            ysn:cv_enable_bg="true"
            ysn:cv_enable_border="false"
            ysn:cv_tick_color="@android:color/white" />

        <ysn.com.view.checkview.CheckView
            android:id="@+id/main_activity_check_view3"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="20dp"
            ysn:cv_mode="square" />

        <ysn.com.view.checkview.CheckView
            android:id="@+id/main_activity_check_view4"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="20dp"
            ysn:cv_enable_bg="true"
            ysn:cv_enable_border="false"
            ysn:cv_mode="square"
            ysn:cv_tick_color="@android:color/white" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:background="#e6e6e6" />
</LinearLayout>